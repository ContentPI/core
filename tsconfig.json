{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "target": "esnext",
    "noImplicitThis": false
  },
  "files": [
    "src/index.ts",
    "src/languages.ts",
    "src/array/index.ts",
    "src/core/index.ts",
    "src/files/index.ts",
    "src/frontend/index.ts",
    "src/graphql/index.ts",
    "src/i18n/index.ts"
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
